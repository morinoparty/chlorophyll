{
    "name": "chlorophyll",
    "private": true,
    "version": "0.0.0",
    "type": "module",
    "scripts": {
        "check": "biome check ./ --write",
        "build": "pnpm -r build",
        "dev:docs": "pnpm --filter @chlorophyll/docs dev",
