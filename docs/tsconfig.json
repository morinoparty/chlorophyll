{
    "compilerOptions": {
        "target": "ES2022",
        "module": "ESNext",
        "moduleResolution": "Bundler",
        "strict": true,
        "esModuleInterop": true,
        "skipLibCheck": true,
        "jsx": "react-jsx",
        "lib": ["DOM", "DOM.Iterable", "ES2022"],
        "baseUrl": ".",
        "paths": {
            "styled-system/*": ["./styled-system/*"],
            "@/*": ["./app/*"],
            "fumadocs-mdx:collections/*": ["./.source/*"]
        }
    },
    "include": [
        "app/**/*.ts",
        "app/**/*.tsx",
        "styled-system/**/*.ts",
        ".source/**/*.ts",
        "source.config.ts",
        "content/**/*.mdx"
    ]
}
