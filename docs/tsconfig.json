{
    "compilerOptions": {
        "target": "ES2022",
        "module": "ESNext",
        "moduleResolution": "Bundler",
        "strict": true,
        "esModuleInterop": true,
        "skipLibCheck": true,
        "jsx": "react-jsx",
        "lib": ["DOM", "DOM.Iterable", "ES2022"],
        "baseUrl": ".",
        "paths": {
            "styled-system/*": ["./styled-system/*"]
        }
    },
    "include": ["app/**/*.ts", "app/**/*.tsx", "styled-system/**/*.ts"]
}
