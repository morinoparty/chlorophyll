{
    "$schema": "https://biomejs.dev/schemas/1.9.4/schema.json",
    "vcs": {
        "enabled": true,
        "clientKind": "git",
        "useIgnoreFile": true
    },
    "files": {
        "ignoreUnknown": false,
        "ignore": []
    },
    "formatter": {
        "enabled": true,
        "indentStyle": "space",
        "indentWidth": 4,
        "ignore": [".next", "node_modules", "public", "styled-system", "src/components/ui", "env.d.ts"],
        "lineWidth": 120
    },
    "organizeImports": {
        "enabled": true
    },
    "linter": {
        "enabled": true,
        "ignore": [".next", "node_modules", "public", "styled-system", "src/components/ui", "env.d.ts"],
        "rules": {
            "recommended": true,
            "correctness": {
                "noUnusedImports": "error"
            },
            "suspicious": {
                "noConsoleLog": "error"
            }
        }
    },
    "javascript": {
        "formatter": {
            "quoteStyle": "double"
        }
    }
}
